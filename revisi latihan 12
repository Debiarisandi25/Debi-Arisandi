class Mahasiswa:
    mhswCount = 0

    def __init__(self, nama,nim,angkatan):
        self.nama= nama
        self.nim= nim
        self.angkatan=tahun
        Mahasiswa.mhswCount +=1

    def biodata(self):
       print("\nNama :",self.nama,"\nNim :",self.nim,"\nAngkatan : ", self.angkatan)

nama=input("masukan nama kamu: ")
nim=input("masukan nim kamu: ")
